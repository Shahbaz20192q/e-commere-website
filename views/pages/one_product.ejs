<section class="reviews section-p1" id="reviews">
  <form action="/shop/<%=product.id%>/review" method="post" id="cform">
    <div class="inputs-div">
      <input
        type="text"
        name="comment"
        placeholder="Enter your comment"
        id="comment-input"
        required
      />
      <input type="submit" />
    </div>
  </form>

  <% product.reviews.reverse().forEach(function(elem){ %>
  <div class="review-container">
    <p><%=elem.username%></p>
    <p><%=elem.comment%></p>
  </div>
  <% }) %>
</section>

