<script>
  function updateCart(newQuantity) {
    // Set the input value to 1 if the new quantity is less than 1
    if (newQuantity < 1) {
      newQuantity = 1;
    }

    document.getElementById("cartquantity").value = newQuantity;
  }

  function resetQuantity() {
    document.getElementById("cartquantity").value = 1;
  }
</script>

